<%= form_for(@item, format: :js, remote: true) do |f| %>
  <div class="row">
    <div class="medium-12 columns">
      <label>Day <span id="day-numbering"></span>
        <%= f.hidden_field :day%>
        
      </label>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <label>Description
        <%= f.text_field :desc %>
        
      </label>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
     <%=f.hidden_field :itenary_id, :value => @itenary.id%>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <%= f.submit "Create" %>
    </div>
  </div>
  
<% end -%>