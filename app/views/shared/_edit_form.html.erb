<%= form_for(item, :method => :put) do |f| -%>
  <div class="row">
    <div class="medium-12 columns">
      <label id="day-label">Day <%= item.day %>
       
        
      </label>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <label>Location
        <%= f.text_field :location %>
        
      </label>
    </div>
  </div>
  
  <%= f.fields_for :sub_items do |ff| %>
    <%= render "itenaries/sub_item_fields", f: ff, :item => item  %>
  <% end %>



  <div class="row">
    <div class="medium-12 columns">
      <div class="button-group add-sub-item">
        <%= link_to_add_association "Add a place", f, :sub_items, {partial: "itenaries/sub_item_fields", class: "button"} %>
         <%= f.submit "Update", class: "button button-default", id: "submit-edit" %>
      </div>
      
    </div>
  </div>

 
<% end -%>