<%= form_for(item, :method => :put, format: :js, remote: true) do |f| -%>
  <div class="row">
    <div class="medium-12 columns">
      <label>Day
        <%= f.text_field :day %>
        
      </label>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <label>Description
        <%= f.text_field :desc %>
        
      </label>
    </div>
  </div>

  <div class="row">
    
      <%= f.submit "Update", class: "button button-default", id: "submit-edit" %>
    
  </div>
<% end -%>